{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "resolveJsonModule": true,
    "paths": {
      "space-token-hunt/postgresql": [
        "libs/postgresql/src"
      ],
      "space-token-hunt/crypto": [
        "libs/crypto/src"
      ],
      "space-token-hunt/redis": [
        "libs/redis/src"
      ],
      "space-token-hunt/exceptions": [
        "libs/exceptions/src"
      ],
      "space-token-hunt/typings": [
        "typings"
      ],
      "space-token-hunt/auth": [
        "libs/auth/src"
      ],
      "space-token-hunt/auth/*": [
        "libs/auth/src/*"
      ],
      "@app/common": [
        "libs/common/src"
      ],
      "@app/common/*": [
        "libs/common/src/*"
      ],
      "@space-token-hunt/core": ["apps/space-token-hunt/src/core"],
    }
  }
}